{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --watch src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "bunx --bun drizzle-kit push",
    "db:studio": "bun run --bun drizzle-kit studio",
    "db:generate": "bunx --bun drizzle-kit generate",
    "db:migrate": "bunx --bun drizzle-kit migrate",
    "db:generate-auth": "bunx --bun @better-auth/cli generate --config ./src/lib/auth.ts --output ./src/db/schema/auth.ts"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.13",
    "@ai-sdk/openai": "^2.0.38",
    "@hono/zod-openapi": "^1.1.3",
    "@libsql/client": "^0.15.15",
    "@polar-sh/better-auth": "^1.1.3",
    "@polar-sh/sdk": "^0.34.16",
    "@scalar/hono-api-reference": "^0.9.19",
    "ai": "^5.0.39",
    "better-auth": "^1.3.13",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.8.2",
    "hono-pino": "^0.10.2",
    "octokit": "^5.0.3",
    "pino": "^10.0.0",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.6",
    "drizzle-kit": "^0.31.2",
    "typescript": "^5.8.2"
  }
}
